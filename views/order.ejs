      <div class="custom-select" style="width: 600px; size: 200px; " >
        
      <span>Payment mode  :</span> 
       <select style="width:400px ; height: 50px;margin-top: 20px;" name="Paymode" id="">
        <option value="0">Online payment</option>
        <option value="1">Cash on delivery</option>
       </select>
      </div>
      

  
      <span>Description</span> <br>
      <textarea name="Description" id="" cols="45" rows="5"></textarea>


    </div>
  </div>
    
 <button   type="submit" name="formwala"><h3> Order Now</h3></button>
    </form>
   </div>
 
   
</section>

