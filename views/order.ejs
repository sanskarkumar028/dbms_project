<%- include('header') %>
<section class="order">

  <h2>Order Now</h2>

  
   <div class=" box">

    <form action="/" method="post">

      <div class="row  ms-0 me-0">
        <div class="p-3 col-6">
         <span>Your name:</span> 
          <input type="text" maxlength="80" name="name" size="40"> <br>

          <span>Mobile no.:</span> 
          <input type="text" maxlength="80" name="mob" size="40"> <br>

          <span>e--- -mail:</span> 
          <input type="text" maxlength="80" name="email" size="40"> <br>


          <span>Address</span> <br>
          <textarea name="Address" id="" cols="45" rows="5"></textarea>

        </div>
    

     <div class="p-3 col-6">
      <span>Items name :</span> 
      <input type="text" maxlength="80"  name="items" size="40"> <br>

